#!/bin/bash

ENTRIES="󰐥 Shutdown\n󰜉 Reboot\n󰤄 Suspend\n󰌾 Lock\n󰍃 Logout"
PICKED_ENTRY=$(echo -e $ENTRIES | rofi -dmenu)

if [ -z "$PICKED_ENTRY" ]; then
    exit 0
fi

case "$PICKED_ENTRY" in
    *Shutdown*)
        systemctl poweroff;;
    *Reboot*)
        systemctl reboot;;
    *Suspend*)
        systemctl suspend;;
    *Lock*)
        loginctl lock-session;;
    *Logout*)
        loginctl terminate-session $(loginctl session-status | head -n 1 | awk '{print $1}');;
esac
